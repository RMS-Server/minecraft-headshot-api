{
    "name": "xrain/minecraft-head-api",
    "description": "A PHP API service to get Minecraft player head avatars",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-gd": "*",
        "ext-curl": "*",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^6.4",
        "monolog/monolog": "^2.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
} 